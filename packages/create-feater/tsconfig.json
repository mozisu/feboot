{
  "compilerOptions": {
    "sourceMap": false,
    "noImplicitAny": true,
    "target": "es5",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "baseUrl": "src",
    "outDir": "./lib",
    "paths": {
      "@/*": [
        "*"
      ],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
